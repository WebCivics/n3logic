{
  "root": true,
  "env": {
    "es2021": true
  },
  "plugins": ["jest", "@typescript-eslint"],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:jest/recommended"
  ],
  "overrides": [
    {
      "files": ["**/*.test.ts", "**/*.test.js"],
      "env": {
        "jest": true
      },
      "plugins": ["jest"]
    }
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  }
}
